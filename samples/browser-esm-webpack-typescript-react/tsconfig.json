{
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"es5",
			"es2015.collection",
			"es2015.promise"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "Target",
		"rootDir": "Source",
		"sourceMap": true,
		"strict": true,
		"target": "ES6",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": []
	},
	"exclude": [
		"node_modules"
	],
	"extends": "@playform/build/tsconfig",
	"include": [
		"Source"
	]
}
